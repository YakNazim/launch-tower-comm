#:kivy 1.0

## Set <key> <expr>
#:set conn_green (0, 1, .5, .8)
#:set conn_yellow (1, 1, 0, .8)
#:set conn_red (1, 0, 0, .8)


# Root widget description
<LTC>:
    indicators: indicators
    toplayout: toplayout

    BoxLayout:
        size: root.size
        orientation: 'vertical'
        padding: 5
        spacing: 10

        # Parent widget of the State display and Relay controls
        BoxLayout:
            id:toplayout
            orientation: 'horizontal'
            padding: 5
            size_hint_x: 1
            size_hint_y: 0.45
            pos_hint: {'x': 0, 'center_y': 0.5}

        HSeparator

        # Parent widget of the indicators
        BoxLayout:
            id: indicators
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: 0.45

        HSeparator


<StatusDisplay>:
    state_info: state_info
    status_message: status_message
    orientation: 'vertical'

    Label:
        id: state_info
        font_size: 60
        text: "This is State."
        size_hint_y: .7

#    HSeparator
#        size_hint_y: 0.05

    Label:
        id: status_message
        font_size: 20
        text: "This message is important."
        size_hint_y: 0.25

<InterfaceKitPanel>:
    labels: labels
    orientation: 'vertical'
    pos_hint: {'x': 0, 'y': 0}
    padding: 5

    # COLUMN LABELS
    BoxLayout:
        id: labels
        orientation: 'horizontal'
        padding: 5
        spacing: 10

        MyLabel:
            text: 'DEVICE'
            font_size: 20

        VSeparator

        MyLabel:
            text: 'Status'
            font_size: 20


<IOIndicator>:
    label_slot: label_slot
    device_label: device_label
    status_ind: status_ind

    BoxLayout:
        id: label_slot

        orientation: 'horizontal'
        padding: 5
        spacing: 10

        MyLabel:
            id: device_label
            text: 'device'

        RelayLabel:
            id: status_ind
            text: ' '
            font_size: 30


<RelayLabel>:
    canvas:
        Color:
            rgba: self.background_color
        BorderImage:
            pos: self.pos
            size: self.size
            source: 'atlas://data/images/defaulttheme/button'
        Color:
            rgba: self.color
        Rectangle:
            texture: self.texture
            size: self.texture_size
            pos: int(self.center_x - self.texture_size[0] / 2.), int(self.center_y - self.texture_size[1] / 2.)


## kv lang templates.
### use them by their name (the part before the @)

[VSeparator@Widget]:
    size_hint_x: None
    width: 10
    canvas:
        Color:
            rgba: .8, .8, .8, .3
        Rectangle:
            size: 1, self.height
            pos: self.center_x, self.y

[HSeparator@Widget]:
    size_hint_y: 0.005
    width: 1
    canvas:
        Color:
            rgba: .8, .8, .8, .9
        Rectangle:
            size: self.width * 0.99, 2
            pos: self.x, self.center_y

[MyLabel@Label]:
    size_hint_y: 1
    height: max(dp(45), self.texture_size[1] + dp(10))
    text: ctx.text if 'text' in ctx else ''
    text_size: self.width, self.height
    font_size: ctx.font_size if 'font_size' in ctx else 30
    valign: 'middle'
    halign: 'center'
    canvas.before:
        Color:
            rgba: .2, .2, .2, .8
        Rectangle:
            size: self.size
            pos: self.pos
