#: import LTCAccordionItem ltcctrl.LTCAccordionItem
#: import LTCButton ltcctrl.LTCButton

<ltcctrl>
    accordian_armed: accordian_armed
    accordian_unarmed: accordian_unarmed
    button_shorepower_off: button_shorepower_off
    button_shorepower_on: button_shorepower_on
    button_abort_button: button_abort
    button_ignite: button_ignite
    
    LTCAccordionItem:
        font_size: 40
        id: accordian_unarmed
        title: 'Unarmed'
        BoxLayout:
            orientation: 'vertical'
            LTCButton:
                font_size: 40
                id: button_shorepower_on
                text: 'Enable Shore Power'
                on_release:  root.on_button_shorepower(True)
            LTCButton:
                font_size: 40
                id: button_shorepower_off
                text: 'Disable Shore Power'
                on_release: root.on_button_shorepower(False)
            Button:
                font_size: 40
                text: 'Arm'
                on_release: root.arm(True)
    LTCAccordionItem:
        font_size: 40
        id: accordian_armed
        title: 'Armed'
        BoxLayout:
            orientation: 'vertical'
            LTCButton:
                font_size: 40
                id: button_ignite
                text: 'Ignite'
                on_release: root.on_button_ignite()
            LTCButton:
                font_size: 40
                id: button_abort
                text: 'Abort'
                on_release: root.abort()


<IgnitionPopup>
    size: root.size
    title: 'With great power comes great responsibility' 
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 40
            text: "Are you sure you want to launch the rocket?"
        BoxLayout:
            orientation: 'horizontal'
            Button:
                font_size: 40
                text: 'Ignite'
                on_release: root.on_button_ignite(), root.dismiss()
            Label:
                text: '                          '
            Button:
                font_size: 40
                text: 'Cancel'
                on_release: root.abort(), root.dismiss()



