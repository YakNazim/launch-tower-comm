#: import LTCAccordionItem ltcctrl.LTCAccordionItem
#: import LTCButton ltcctrl.LTCButton

<ltcctrl>
    armed: armed
    unarmed: unarmed
    shorepower_button_off: shorepower_button_off
    shorepower_button_on: shorepower_button_on
    abort_button: abort_button
    ignite_button: ignite_button
    LTCAccordionItem:
        font_size: 40
        id: unarmed
        title: 'Unarmed'
        BoxLayout:
            orientation: 'vertical'
            LTCButton:
                font_size: 40
                id: shorepower_button_on
                text: 'Enable Shore Power'
                on_release:  root._on_shorepower_button(True)
            LTCButton:
                font_size: 40
                id: shorepower_button_off
                text: 'Disable Shore Power'
                on_release: root._on_shorepower_button(False)
            Button:
                font_size: 40
                text: 'Arm'
                on_release: root.arm(True)
    LTCAccordionItem:
        font_size: 40
        id: armed
        title: 'Armed'
        BoxLayout:
            orientation: 'vertical'
            LTCButton:
                font_size: 40
                id: ignite_button
                text: 'Ignite'
                on_release: root._ignition_popup()
            LTCButton:
                font_size: 40
                id: abort_button
                text: 'Abort'
                on_press: self.state = 'down'
                on_release: root._on_abort()


<IgnitionPopup>
    size: root.size
    title: 'With great power comes great responsibility' 
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 40
            text: "Are you sure you want to launch the rocket?"
        BoxLayout:
            orientation: 'horizontal'
            Button:
                font_size: 40
                text: 'Ignite'
                on_release: root.ignitefunc(), root.dismiss()
            Label:
                text: '                          '
            Button:
                font_size: 40
                text: 'Cancel'
                on_release: root.abort(), root.dismiss()



